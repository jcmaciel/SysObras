<h1>Lista de prestadores de servicos</h1>

<table>
  <tr>
    <th>Tipo</th>
    <th>Nome do prestador</th>
    <th>Valor diario</th>
    <th>Valor total</th>
  </tr>

<% @servicos.each do |servico| %>
  <tr>
    <td><%=h servico.tipo %></td>
    <td><%=h servico.nome_do_prestador %></td>
    <td><%=h servico.valor_diario %></td>
    <td><%=h servico.valor_total %></td>
    <td><%= link_to 'Mostrar', servico %></td>
    <td><%= link_to 'Editar', edit_servico_path(servico) %></td>
    <td><%= link_to 'Deletar', servico, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

