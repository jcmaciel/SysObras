<h1>Lista de fornecedores</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Endereco</th>
    <th>Telefone</th>
  </tr>

<% @fornecedores.each do |fornecedor| %>
  <tr>
    <td><%=h fornecedor.nome %></td>
    <td><%=h fornecedor.endereco %></td>
    <td><%=h fornecedor.telefone %></td>
    <td><%= link_to 'Mostrar', fornecedor %></td>
    <td><%= link_to 'Editar', edit_fornecedor_path(fornecedor) %></td>
    <td><%= link_to 'Deletar', fornecedor, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo fornecedor', new_fornecedor_path %>

